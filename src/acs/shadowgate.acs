script "ClearMsg" ( int id )
{
  HudMessage(s:""; 0,id,-1,0,0,0);
}

script "Select_Puff" (void)
{
  LineAttack(0, GetActorAngle(0), GetActorPitch(0), 0, "cursor_puff");
}


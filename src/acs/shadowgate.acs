script 1 (int thing_index)
{
  switch(thing_index)
  {
    case 0:
      switch (StrMid(GetWeapon(), 7, 99))
      {
        case "Point":
        case "Look":
          HudMessageBold (s:"success"; HUDMSG_PLAIN, 0, "CR_BLACK", 320.0, 240.0, 9999.0);
          break;
        default:
          HudMessageBold (s:"default"; HUDMSG_PLAIN, 0, "CR_BLACK", 320.0, 240.0, 9999.0);
          break;
      }
      break;
    case 1:
     HudMessageBold (s:"door"; HUDMSG_PLAIN, 0, "CR_BLACK", 320.0, 240.0, 9999.0);
     break; 
  }
}

